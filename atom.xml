  <entry>
    <title>Ubuntu14.04 升级15.10时黑屏问题</title>
    <link href="http://yoursite.com/2016/05/01/myfirst/"/>
    <id>http://yoursite.com/2016/05/01/myfirst/</id>
    <published>2016-05-01T06:06:20.000Z</published>
